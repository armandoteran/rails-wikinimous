<%= form_for @article do |f| %>

        <h1>New Article</h1>

        <div class="mt-3">
          <p> <strong><%= f.label :title, "Title" %> </strong></p>
        </div>

        <div>
          <%= f.text_field :title, size: "60" %>
        </div>

        <div class="mt-3">
          <p> <strong><%= f.label :content, "Content" %></strong></p>
        </div>

        <div>
          <%= f.text_area :content, size: "60x12" %>
        </div>

        <div class="mt-3">
          <%= f.submit %>
        </div>

      <% end %>
